<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <title>@ViewData["Title"] - ToDoApp.MVC.UI</title>
    <style>
        /* Custom styles */
           .custom-sidebar {
        width: 200px; /* Adjust the width as needed */
    }
        .navbar-dark .navbar-nav .nav-link {
            color: white;
        }

            .navbar-dark .navbar-nav .nav-link:hover {
                color: yellow;
            }

        .sidebar .nav-link {
            color: white;
        }

            .sidebar .nav-link:hover {
                color: yellow;
            }

    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="position:fixed;top:0; width:100%; z-index:1">
            <div class="container-fluid mx-4">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">ToDoApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="ToDoList" asp-action="GetAllToDoLists" class="nav-link">ToDoList</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="ToDoItem" asp-action="GetAllToDoItems" class="nav-link">ToDoItem</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="ToDoItem" asp-action="GetAllInforamtionRemider" class="nav-link">Quick Reminder</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid" style="padding-top:50px; position:fixed">
        <div class="row">
            <aside class="bg-dark text-light col-2 sidebar" style="height: 100vh; width:125px">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a asp-controller="ToDoItem" asp-action="GetAllToDoItemsToday" class="nav-link">Today</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="ToDoItem" asp-action="GetAllToDoItemsWeek" class="nav-link">Week</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="ToDoItem" asp-action="GetAllToDoItems" class="nav-link">All</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="ToDoItem" asp-action="GetAllToDoItemsCompleted" class="nav-link">Completed</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="ToDoItem" asp-action="GetAllToDoItemsInProgress" class="nav-link">InProgress</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="ToDoItem" asp-action="GetAllToDoItemsNotStarted" class="nav-link">NotStarted</a>
                    </li>
                </ul>
            </aside>
            
            <main class="col-10">
                <div class="container mt-3 pt-4" >
                    @RenderBody()
                </div>
            </main>

        </div>
    </div>

    <footer class="py-1 bg-dark mt-0" style="position: fixed; bottom:0; width:100%">
        <p class="text-center text-light pt-3">
            &copy; 2023 - ToDoApp.MVC.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light">Privacy</a>
        </p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
