@using ToDoApp.Application.UseCases.ToDoLists.Commands.UpdateToDoList;
@using ToDoApp.Application.Commons.Models;
@using ToDoApp.Domain.Entities;

@{
    ViewData["Title"] = "UpdateToDoList";
    Layout = "_Layout";
}

@model ToDoListDto

<h1>Edit ToDoList</h1>

<div class="form-container">
    <form asp-action="UpdateToDoList" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name">Name:</label>
            <input asp-for="Name" class="form-control" required value="@Model.Name"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
