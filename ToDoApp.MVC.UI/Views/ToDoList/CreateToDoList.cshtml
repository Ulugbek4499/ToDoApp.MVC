@using ToDoApp.Application.UseCases.ToDoLists.Commands.CreateToDoList

@{
    ViewData["Title"] = "CreateToDoList";
    Layout = "_Layout";
}

@model CreateToDoListCommand

<h3 class="text-center">Add new ToDoList</h3>
<hr />

<form asp-controller="ToDoList" asp-action="CreateToDoList" enctype="multipart/form-data" method="post">
    <div class="container mt-3 custom-input">
        <label asp-for="Name" class="form-label">Name</label>
        <div class="input-group mb-3">
            <input asp-for="Name" type="text" class="form-control">
        </div>
        <span asp-validation-for="Name" class="text-danger"></span><br>
    </div>
    <div class="button-group">
        <button class="btn btn-dark">Cancel</button>
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>